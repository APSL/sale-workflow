<?xml version="1.0" ?>
<data noupdate="1">
    <!-- Salesman -->
    <record id="salesman_purchase_requisition_rule" model="ir.rule">
        <field name="name">Salesman can modify own purchase requisitions</field>
        <field name="model_id" ref="purchase_requisition.model_purchase_requisition" />
        <field
            name="domain_force"
        >['|', ('user_id','=', user.id), ('sale_user_id','=', user.id)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
        <field name="perm_write" eval="True" />
    </record>
    <record id="salesman_purchase_requisition_line_rule" model="ir.rule">
        <field name="name">Salesman can modify own purchase requisition lines</field>
        <field
            name="model_id"
            ref="purchase_requisition.model_purchase_requisition_line"
        />
        <field
            name="domain_force"
        >['|', ('requisition_id.user_id','=', user.id), ('requisition_id.sale_user_id','=', user.id)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
        <field name="perm_write" eval="True" />
        <field name="perm_unlink" eval="True" />
    </record>

    <!-- Salesman all leads -->
    <record id="salesman_all_leads_purchase_requisition_rule" model="ir.rule">
        <field
            name="name"
        >Salesman all leads can modify own purchase requisitions</field>
        <field name="model_id" ref="purchase_requisition.model_purchase_requisition" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field
            name="groups"
            eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"
        />
        <field name="perm_write" eval="True" />
    </record>
    <record id="salesman_all_leads_purchase_requisition_line_rule" model="ir.rule">
        <field
            name="name"
        >Salesman all leads can modify own purchase requisition lines</field>
        <field
            name="model_id"
            ref="purchase_requisition.model_purchase_requisition_line"
        />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field
            name="groups"
            eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"
        />
        <field name="perm_write" eval="True" />
        <field name="perm_unlink" eval="True" />
    </record>
</data>
